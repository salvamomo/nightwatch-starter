            "screenshots" : {
                "enabled" : true,
                "on_failure": true,
                "path" : "./tests/nightwatch/reports/screenshots/chrome"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "args": []
                }
            }
        }
    }
